.leave-item {
    overflow: hidden;
    padding: 13px 15px;
    background: #ffffff;
    font-size: 16px;
    color: #242424;
}
.select-title{
    padding: 10px 15px;
}
.select-title .fl{
    color: #a5a5a5;
}
.select-title .fr{
    color: #42d48a;
}
.jiantou{
    margin-right: 12px;
    margin-top: 1px;
}
.fl{
    float: left;
}
.fr {
    float: right;
}
.leave-item .fr image {
    width: 9px;
    height: 16px;
    margin-top: 5px;
}
.select-box{
    position: fixed;
    left: 0px;
    top: 0px;
    width: 100%;
    height: 100vh;
    z-index: 999;
    background: rgba(0,0,0,.4);
}
.select-pos{
    position: absolute;
    left: 0px;
    height: 300px;
    width: 100%;
    background: #fff;
    bottom: 0px;
}