.addleave {
    width: 100%;
    height: 100vh;
    overflow-y: scroll;
    background: #F5F6FB;
}
.leve {
    padding: 15px;
    background: #fff;
    color: #A1A2A2;
    line-height: 25px;
    font-size: 14px;
}
.leve view {
    margin-bottom: 10px;
}
.leavelist .leave-item {
    overflow: hidden;
    padding: 13px 15px;
    background: #ffffff;
    font-size: 16px;
    color: #242424;
}
.leave-line {
    margin: 10px 0px;
}
.fr {
    float: right;
}
.leavelist .leave-item .fr image {
    width: 9px;
    height: 16px;
    margin-top: 5px;
}
.leave-text {
    padding: 13px 15px;
    background: #fff;
}
.leave-text textarea {
    width: 100%;
    outline: none;
    resize: none;
    margin: 10px 0px;
    height: 60px;
}
.leave-btn {
    width: 135px;
    height: 46px;
    background: #FDC31A;
    box-shadow: 0px 5px 16px 0px rgba(254, 161, 0, 0.71);
    border-radius: 36px;
    text-align: center;
    line-height: 46px;
    color: #222222;
    margin: 40px auto 30px;
}
.leave-btn image {
    width: 20px;
    height: 20px;
    margin-right: 7px;
    vertical-align: -4px;
}
.jiantou{
    margin-right: 12px;
    margin-top: 1px;
}
.leave-line picker{
    position: relative;
    z-index:777
}