.punch-pos {
  position: fixed;
  left: 0px;
  bottom: 0px;
  width: calc(100% - 30px);
  overflow: hidden;
  background: #fff;
  border-radius: 13px 13px 0px 0px;
}
.content-box {
  padding: 15px;
  overflow: hidden;
}
.punch-title {
  font-size: 18px;
}
.location {
  padding: 19px 0px;
  border-bottom: 1px;
}
.location image {
  width: 18px;
  height: 22.5px;
  vertical-align: -3px;
  margin-right: 8px;
}
.punch-btn {
  width: 120px;
  height: 55px;
  background: #FDC31A;
  border-radius: 43px;
  box-shadow: 3px 4px 10px #ffc51d;
  text-align: center;
  line-height: 55px;
  margin: 20px auto;
}
.punch-btn image {
  width: 18px;
  height: 18px;
  vertical-align: -3px;
  margin-right: 8px;
}
.cover-view {
  position: absolute;
  top: calc(50% - 150rpx);
  left: calc(50% - 300rpx);
  /* opacity: .7; */
}

.flex-wrp{
  display:flex;
}

.flex-item{
  width: 200rpx;
  height: 300rpx;
  font-size: 26rpx;
}

